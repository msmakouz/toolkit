{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "target": "es6",
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "pretty": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [ "./types", "./node_modules/@types" ],
  },
  "include": [
    "src"
  ]
}
